<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:pages="clr-namespace:WheelOfNumFortune.Pages"
			 x:Class="WheelOfNumFortune.Pages.HomePage"
			 x:DataType="pages:HomePage">
	<StackPanel>
		<TextBox TextWrapping="Wrap" AcceptsReturn="true" HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" Text="{Binding Visualizzazione}"/>
		<Button Content="Get new Cookie" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding Tick}"/>
		<TextBox TextWrapping="Wrap" AcceptsReturn="true" HorizontalAlignment="Center" VerticalAlignment="Center" IsEnabled="{Binding AbilitaRisposta}" AcceptsTab="False" Text="{Binding Risposta, Mode=TwoWay}"/>
		<Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Check Solution" Command="{Binding CheckRisposta}" IsEnabled="{Binding AbilitaCheckRisposta}"/>
		<Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Discover letter" Command="{Binding DiscoverLetter}" IsEnabled="{Binding AbilitaDiscoverLetter}"/>
	</StackPanel>
</UserControl>
